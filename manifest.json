{
  "manifest_version": 2,
  "name": "Email2Clipoard",
  "version": "1.5",

  "description": "Copie les emails des élèves dans le presse-papier",

  "icons": {
    "48": "icons/envelope.svg"
  },

  "permissions": ["activeTab", "clipboardWrite", "tabs", "notifications", "alarms"],

  "page_action": {
    "default_icon": "icons/envelope.svg",
    "default_title": "Email2Clipoard",
    "default_popup": "popup/copypage.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["background.js"]
  }
}
